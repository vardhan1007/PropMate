generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  AGENT
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  role          UserRole  @default(USER)
  image         String?
  properties    Property[]
  createdAt     DateTime  @default(now())
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  address     String
  city        String
  category    String   
  beds        Int
  baths       Int
  sqft        Int
  images      String[] 
  isPublished Boolean  @default(false)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}